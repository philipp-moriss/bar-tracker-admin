rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Bars collection
    match /bars/{barId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Events collection
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Tickets collection (admin needs to list tickets)
    match /tickets/{ticketId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Users related collections used by admin UI
    match /profiles/{userId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    match /userActivities/{activityId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Default: allow read for other collections used by admin UI
    match /{document=**} {
      allow read: if true;
    }
  }
}
